<% if item_order.present? %>
  <%= link_to table_item_order_path(table_id: @table, id: item_order.id, quantity: 1), id: item.id, method: :patch,
              data: {
                dish_card_target: 'plusButton',
                action: 'click->dish-card#plus'
              } do %>
    <i class="fa-solid fa-circle-plus" id="plus-minus-button"></i>
  <% end %>
<% else %>
  <%= link_to table_item_item_orders_path(table_id: @table, item_id: item), id: item.id, method: :post,
              data: {
                dish_card_target: 'newButton',
                action: 'click->dish-card#create'
              } do %>
    <i class="fa-solid fa-circle-plus" id="plus-minus-button"></i>
  <% end %>
<% end %>
