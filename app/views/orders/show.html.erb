<% @order.item_orders.each do |item| %>
  <% @itemid = item.item_id %>
  <% @itemquantity = item.quantity %>
  <% @item = Item.where(id:@itemid) %>

    <% @item.each do |item| %>
    <div class="order-card">
        <div class="order-card-content">
          <div class="title-plus-minus">
            <h2><%= item.name %></h2>
            <p><i class="fa-solid fa-circle-minus"></i>  <%=@itemquantity  %> <i class="fa-solid fa-circle-plus"></i></p>
          </div>
              <p><%= item.description %></p>
          <div class="order-category-name-price">
            <h6><%= item.category %></h6>
            <h6><%= item.price * @itemquantity %></h6>
          </div>
        </div>
      </div>
    <% end %>
<% end %>
