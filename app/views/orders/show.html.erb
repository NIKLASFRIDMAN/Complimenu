<%= render 'shared/summary_page' %>
<% items_total_prices = [] %>
<% @order.item_orders.each do |item_order| %>
  <% @items = Item.where(id:item_order.id) %>
    <% @items.each do |item| %>
    <div class="order-card">
        <div class="order-card-content">
          <div class="title-plus-minus">
            <h2><%= item.name %></h2>
            <p><i class="fa-solid fa-circle-minus"></i>  <%=item_order.quantity%> <i class="fa-solid fa-circle-plus"></i></p>
          </div>
            <p><%= item.description %></p>
          <div class="order-category-name-price">
            <h6><%= item.category %></h6>
            <h6><%= item.price * item_order.quantity %></h6>
            <% items_total_prices << item.price * item_order.quantity %>
          </div>
        </div>
    </div>
    <% end %>
<% end %>

<div class="payment_total">
  <h1>Total:</h1>
  <h1><%= items_total_prices.sum %> â‚¬</h1>
</div>
