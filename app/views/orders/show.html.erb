<div class="wrapper">
  <div class="">
    <%= render 'shared/navbar' %>
    <%= render 'shared/summary_page' %>
  </div>
  <div>
    <% @order.item_orders.each do |item_order| %>
      <% @item = Item.where(id:item_order.item.id) %>
        <% @item.each do |iteminfo| %>
        <div class="order-card">
            <div class="order-card-content">
              <div class="title-plus-minus">
                <h2><%= iteminfo.name %></h2>
                <p><i class="fa-solid fa-circle-minus"></i>  <%=item_order.quantity%> <i class="fa-solid fa-circle-plus"></i></p>
              </div>
                <p><%= iteminfo.description %></p>
              <div class="order-category-name-price">
                <h6><%= iteminfo.category %></h6>
                <h6><%= (iteminfo.price * item_order.quantity).round(2) %> €</h6>
              </div>
            </div>
        </div>
        <% end %>
    <% end %>
  </div>

  <div class="payment_total">
    <h1>Total:</h1>
    <h1><%= @all_items_total_price[0].round(2) %> €</h1>
  </div>
</div>
