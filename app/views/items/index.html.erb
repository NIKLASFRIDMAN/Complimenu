<% @catitems.each do |category, items| %>
  <div id="<%= category %>">
    <h1 id="<%= category.downcase %>" class="h1-dish-card"><%=category.capitalize%></h1>
  </div>
  <% items.each do |item| %>
    <%= render "dish_card", table: @table, item: item[:item], item_order: item[:item_order] %>
  <% end %>
<% end %>

<%= render "shared/basket_button", table: @table %>
<div class="button-background-colour"></div>
