<% @catitems.each do |category, item_orders| %>
  <div id="<%= category %>">
    <h1 id="<%= category.downcase %>" class="h1-dish-card"><%=category.capitalize%></h1>
  </div>
  <% item_orders.each do |item_order| %>
    <%= render "dish_card", item: item_order.item, item_order: item_order %>
  <% end %>
<% end %>

<%= render "shared/basket_button" %>
<div class="button-background-colour"></div>
