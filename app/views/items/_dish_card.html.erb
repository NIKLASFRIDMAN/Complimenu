<div class="dish-card" data-controller="dish-card" data-dish-card-target="card">
  <div class="dish-picture" style="background-image: url('<%= item_order.item.image_url %>');" >
    <p><i class="fa-regular fa-star"></i> 9.7</p>
  </div>
  <div class="dish-card-content">
    <div class="title-plus-minus">
      <h2><%= item_order.item.name %></h2>
      <p>
        <%= render "item_orders/minus_button.html.erb", item_order: item_order %>
        <span data-dish-card-target="quantity" id="quantity-<%= item_order.item.id %>">
          <%= item_order.present? ? item_order.quantity : 0 %>
        </span>
        <%= render "item_orders/plus_button.html.erb", item_order: item_order %>
      </p>
    </div>
    <p class="toggle-paragraph description" data-action="click->dish-card#revealDescription" data-dish-card-target="description"><%= item_order.item.description %></p>
    <h6 class="price"><%= item_order.item.price %> â‚¬</h6>
  </div>
</div>
